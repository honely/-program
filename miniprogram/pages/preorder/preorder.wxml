<!-- titles -->
<view class="page">
    <view class="page__bd">
        <view class="weui-panel weui-panel_access">
            <!--  房源信息-->
            <view class="weui-panel__bd">
                <view class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                    <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb" src="../../images/001.png" />
                    </view>
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-media-box__title">钟鼓楼/泰和坊/永兴坊/回民街两居室钟鼓楼</view>
                        <view class="weui-media-box__desc">
                            整租
                            |
                            两室一厅
                            |
                            可住4人
                        </view>
                    </view>
                </view>
            </view>
            <!--  房源信息-->

            <!--  入住信息-->
            <view class='pad-form'>
                <view class='start-time flost'>
                    <view class='rent-title'>入住时间</view>
                    <view class='rent-date'>2019-12-23</view>
                </view>
                <view class='end-time flost'>
                    <view class='rent-title'>离开时间</view>
                    <view class='rent-date'>2019-12-23</view>
                </view>
            </view>
            <view class="weui-panel__bd">
                <view class="weui-cells weui-cells_after-title">
                    <view class="weui-cell">
                        <view class="weui-cell__bd">入住人数</view>
                        <view class="weui-cell__ft">
                            <input class="weui-input" placeholder="必填最多3人必填最多3人"/>
                        </view>
                    </view>
                    <view class="weui-cell">
                        <view class="weui-cell__bd">联系人</view>
                        <view class="weui-cell__ft">
                            <input class="weui-input" placeholder="填写真实姓名"/>
                        </view>
                    </view>
                    <view class="weui-cell">
                        <view class="weui-cell__bd">手机号</view>
                        <view class="weui-cell__ft">
                            <input class="weui-input" placeholder="请输入手机号"/>
                        </view>
                    </view>
                    <view class="weui-cell">
                        <view class="weui-cell__bd">身份证号</view>
                        <view class="weui-cell__ft">
                            <input class="weui-input" placeholder="请输入身份证号"/>
                        </view>
                    </view>
                </view>
            </view>
        </view>
        <cover-view class='bottom-btn'>
            <cover-view class='bot-btn service'>
                <button class='contact-btn'>
                    线上支付：￥0.01
                </button>
            </cover-view>
            <cover-view class='bot-btn order' bindtap='toOrder'>
                提交订单
            </cover-view>
        </cover-view>
    </view>
</view>